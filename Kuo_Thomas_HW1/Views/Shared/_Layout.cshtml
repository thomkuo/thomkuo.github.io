<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/32d10b07b1.js" crossorigin="anonymous"></script>
</head>
<body>
    <!--This is the code for the navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">

            <!--This is the code for the "hamburger menu" button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!--This is the link to the home page - you can leave this as is -->
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Thomas Kuo</a>

            <!--everything in this section will collapse when the screen is small -->
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/AboutMe">
                            <span class="fas fa-user-tie">
                            </span>
                            &nbsp;Professional
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Personal">
                            <span class="fas fa-user">
                            </span>
                            &nbsp;Personal
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Projects">
                            <span class="fas fa-project-diagram">
                            </span>
                            &nbsp;Projects
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/files/Thomas_Kuo_Resume.pdf">
                            <span class="fas fa-file">
                            </span>
                            &nbsp;Resume
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!--this is the main content section of the website -->
    <div class="container">
        <!--NOTE: This is where the code from the main view is inserted -->
        @RenderBody()
    </div>

    <!--This code references different script libraries to make your page responsive -->
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
    <br />
    <br />
    <footer class="text-center">
        <p style="color:grey">
            Created by Thomas Kuo. For more information contact me at 
            <a href="mailto:thomaskuo@utexas.edu" style="color: blue">thomaskuo@utexas.edu.</a>
        </p>
    </footer>
</body>
</html>